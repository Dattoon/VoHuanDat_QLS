
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Thông tin giỏ hàng</h2>
<table align="center" border="1" style="border-collapse: collapse; width: 100%;">
    <thead>
        <tr style="text-align:center; font-weight:bold">
            <th>Mã sách</th>
            <th>Tên sách</th>
            <th>Ảnh bìa</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
            <th width="50px"></th>
            <th width="50px"></th>
            <th width="50px"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
        {
            <tr style="text-align:center;">
                <td>@item.iMasach</td>
                <td>@item.sTensach</td>
                <td><img src="" style="max-width: 100px; max-height: 100px;" /></td>

                @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @iMaSP = item.iMasach }))
                {
                    <td>
                        <input type="number" min="1" name="txtSoLuong" value="@item.iSoluong" style="background-color:white" />
                    </td>
                    <td>@String.Format("{0:0:0}", item.dDongia)</td>


                    <td>@String.Format("{0:0:0}", item.dThanhTien)</td>
                    <td>
                        <a href="@Url.Action("Detail", "Home", new { id = item.iMasach })">Chi tiết</a>
                    </td>
                    <td>
                        @Html.ActionLink("Xóa", "XoaGioHang", new { @iMaSP = item.iMasach })
                    </td>
                    <td>
                        <input type="submit" value="Cập Nhật" />
                    </td>

                }


            </tr>
        }
    </tbody>
    <tfoot>
        <tr style="font-weight:bold; text-align:right; color:red">
            <td colspan="4">Số lượng sách: @ViewBag.Tongsoluong</td>
            <td colspan="5">Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VND</td>
        </tr>
    </tfoot>
    <tfoot>
        <tr style="font-weight:bold; text-align:right; color:red">
            <td colspan="9">
                @Html.ActionLink("Xóa giỏ hàng", "XoaTatCaGiohang")
            </td>

        </tr>
        <tr style="font-weight:bold; text-align:right; color:red">
            <td colspan="9">
                @Html.ActionLink("ĐẶT HÀNG", "DatHang", "GioHang")
            </td>
        </tr>
    </tfoot>


</table>